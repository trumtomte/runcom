# Doris
# =====
IMAPStore doris-remote
    Host imap01.binero.se
    User sebastian@doris.tech
    PassCmd "pass Doris/loopia/sebastian@doris.tech"
    SSLType IMAPS
    SSLVersions TLSv1.2
    AuthMechs LOGIN
    PipeLineDepth 2 # nr of concurrent cmds
    Timeout 120

MaildirStore doris-local
    SubFolders Verbatim
    Path ~/Mail/doris/
    Inbox ~/Mail/doris/INBOX
    MaxSize 2000k

Channel doris-inbox
    Master :doris-remote:
    Slave :doris-local:
    CopyArrivalDate Yes
    Create Both
    Expunge Both
    SyncState *
    Patterns "INBOX" "Sent Messages" "Archive" "Deleted Messages"

# Protonmail
# ==========
IMAPStore pm-remote
    Host 127.0.0.1
    Port 1143
    User sebastianbengtegard@protonmail.com
    PassCmd "pass Sebbe/protonbridge2"
    SSLType None
    PipeLineDepth 5

MaildirStore pm-local
    SubFolders Verbatim
    Path ~/Mail/pm/
    Inbox ~/Mail/pm/INBOX
    # MaxSize 120k

Channel pm-inbox
    Master :pm-remote:
    Slave :pm-local:
    CopyArrivalDate Yes
    Create Both
    Expunge Both
    SyncState *
    Patterns "INBOX" "Sent" "Trash" "Archive"
