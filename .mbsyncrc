# Doris
# =====
IMAPStore doris-remote
    Host csrv11.aname.net
    User sebastian@doris.tech
    PassCmd "pass Doris/fsdata/mail/sebastian@doris.tech"
    SSLType IMAPS
    SSLVersions TLSv1.2
    AuthMechs LOGIN
    PipeLineDepth 5 # nr of concurrent cmds
    Timeout 120

MaildirStore doris-local
    SubFolders Verbatim
    Path ~/Mail/doris/
    Inbox ~/Mail/doris/INBOX
    # MaxSize 2000k

Channel doris-inbox
    Far :doris-remote:
    Near :doris-local:
    CopyArrivalDate Yes
    Create Both
    Expunge Both
    SyncState *
    Patterns "INBOX" "Sent" "Archive" "Trash"

# Protonmail
# ==========
IMAPStore pm-remote
    Host 127.0.0.1
    Port 1143
    User sebastianbengtegard@protonmail.com
    PassCmd "pass Sebbe/protonmail/bridge"
    SSLType STARTTLS
    CertificateFile ~/.config/protonmail/bridge/cert.pem
    PipeLineDepth 5
    Timeout 120

MaildirStore pm-local
    SubFolders Verbatim
    Path ~/Mail/pm/
    Inbox ~/Mail/pm/INBOX
    # MaxSize 5M

Channel pm-inbox
    Far :pm-remote:
    Near :pm-local:
    CopyArrivalDate Yes
    Create Both
    Expunge Both
    SyncState *
    Patterns "INBOX" "Sent" "Archive" "Trash"
